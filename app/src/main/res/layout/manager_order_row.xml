<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#039be5"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@android:color/transparent"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mngr_order_clientname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/main_text_size"
            android:textStyle="italic"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:background="#0091ea"
            android:gravity="center"
            android:padding="10dp"
            android:text="اسم العميل"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:maxLines="1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#160e60" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/mngr_order_devtype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/main_text_size"
            android:textStyle="italic"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:background="#0091ea"
            android:gravity="center"
            android:padding="10dp"
            android:text="نوع الجهاز"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:maxLines="1"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#160e60" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/mngr_order_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/main_text_size"
            android:textStyle="italic"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:background="#0091ea"
            android:gravity="center"
            android:padding="10dp"
            android:text="الكمية"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:maxLines="1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#160e60" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/mngr_order_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/main_text_size"
            android:textStyle="italic"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:background="#0091ea"
            android:gravity="center"
            android:padding="10dp"
            android:text="تاريخ الطلب"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:maxLines="1"
            />

    </LinearLayout>



</LinearLayout>
</android.support.v7.widget.CardView>